{
    "manifest_version": 3,
    "name": "Instroom.io",
    "version": "1.0",
    "description": "Tired of tracking influencer campaigns across endless spreadsheets? INSTROOM.io makes influencer management simple, efficient, and stress-freeâ€”all within your browser.",
    "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "declarativeNetRequest",
      "declarativeNetRequestWithHostAccess"
    ],
    "host_permissions": [
      "https://instagram-social-api.p.rapidapi.com/*",
      "https://*.cdninstagram.com/*",
      "https://*.fbcdn.net/*",
      "https://tiktok-api23.p.rapidapi.com/*"
    ],
    "action": {
      "default_icon": {
        "16": "images/Instroom Logo 16x16.png",
        "48": "images/Instroom Logo 48x48.png",
        "128": "images/Instroom Logo 128x128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "declarative_net_request": {
      "rule_resources": [
        {
          "id": "ruleset_1",
          "enabled": true,
          "path": "rules_1.json"
        }
      ]
    },
    "web_accessible_resources": [
      {
        "resources": ["instroom.html", "instroom.css", "instroom.js", "images/*"],
        "matches": ["<all_urls>"]
      }
    ],
    "icons": {
      "16": "images/Instroom Logo 16x16.png",
      "48": "images/Instroom Logo 48x48.png",
      "128": "images/Instroom Logo 128x128.png"
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.instagram.com/*",
          "https://www.tiktok.com/*"
        ],
        "js": [
          "content.js"
        ]
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: blob: https:;"
    }
  }
  